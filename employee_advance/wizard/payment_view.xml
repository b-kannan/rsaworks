    <record id="hr_expense_register_payment_view_form_reconcile_inherit" model="ir.ui.view">
        <field name="name">hr.expense.sheet.register.payment.wizard.form.reconcile.inherited</field>
        <field name="model">hr.expense.sheet.register.payment.wizard</field>
        <field name="inherit_id" ref="hr_expense.hr_expense_sheet_register_payment_view_form" />
        <field name="arch" type="xml">
            <group position="after">
                <div class="oe_right">
                    <button name="create_validate_payment" string="Create &amp; Validate Payment" type="object" groups="hr_expense.group_hr_expense_user" class="oe_highlight"/>
                </div>
                <separator string="Payment Reconcilition"/>
                <field name="wizard_line">
                    <tree create="false" delete="false" editable="top">
                        <field name="is_select"/>
                        <field name="payment_name"/>
                        <field name="partner_id"/>
                        <field name="memo"/>
                        <field name="payment_date"/>
                        <field name="paid_amount"/>
                        <field name="balance"/>
                        <field name="balance_info" invisible="1"/>
                        <field name="amount_to_reconcile"/>
                    </tree>
                </field>
                <separator/>
                <div class="oe_right">
                    <label for="amount_to_reconcile"/>:
                    <field name="amount_to_reconcile" class="oe_right"/>
                </div>
            </group>
        </field>
    </record>
</odoo>
