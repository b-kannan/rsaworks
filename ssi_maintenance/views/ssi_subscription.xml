<?xml version="1.0"?>

<odoo>
  <record id="storage_tree" model="ir.ui.view">
      <field name="name">sale.subscription.form</field>
      <field name="model">sale.subscription</field>
      <field name="arch" type="xml">
		  <xpath expr="//form[1]/sheet[1]/div[not(@name)][3]/notebook[1]" position="inside">
			<page name="Storage" string="Storage">
			  <group>
				<field name="storage_id">
				  <tree string="Storage">
					<field name="equipment_id"/>
					<field name="location_id"/>
					<field name="check_in"/>
					<field name="check_out"/>
					<field name="status"/>
				  </tree>
				</field>
			  </group>
			</page>
		  </xpath>
		  <xpath expr="//field[@name='recurring_invoice_line_ids']" position="inside">
			<form>
			  <sheet string="Subscription Line">
				<group col="4">
				  <field name="product_id"/>
				  <field name="analytic_account_id"/>
				  <newline/>
				  <field name="name" colspan="4"/>
				  <newline/>
				  <field name="quantity"/>
				  <field name="uom_id"/>
				  <field name="price_unit"/>
				  <field name="discount"/>
				  <field name="price_subtotal"/>
				  <separator/>
				</group>
			  </sheet>
			</form>
		  </xpath>
      </field>
  </record>

</odoo>
